@*left @page blank -> don't want to navigate through browser since it's the child component of EmployeeList component*@
@inherits DisplayEmployeeBase

<div class="card m-3" style="min-width: 18rem; max-width: 30.5%">
    <div class="card-header">
        <input type="checkbox" @onchange="CheckBoxChanged"/>
        <h3>@Employee.FirstName @Employee.LastName</h3>
    </div>
    <img class="card-img-top imageThumbnail" src="@Employee.PhotoPath"/>
    @if (ShowFooter)
    {
        <div class="card-footer text-center">
            <a href="@($"employeedetails/{Employee.EmployeeId}")" 
               class="btn btn-primary m-1">view</a>
            <a href="#" class="btn btn-primary m-1">edit</a>
            <a href="#" class="btn btn-danger m-1">delete</a>
        </div>
    }
    
</div>


